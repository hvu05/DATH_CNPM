model User{
  id String @id @default(uuid())
  full_name String
  email String @unique
  password String 
  phone String? 
  role_id Int
  is_active Boolean @default(true)
  avatar String?
  create_at DateTime @default(now())
  update_at DateTime @updatedAt


  role Role @relation(fields: [role_id] , references: [id])
  orders Order[] 
  address Address[]
  reviews Review[]
  cart_items CartItem[]
  payment Payment[]
}