model Order{
  id String @id @unique
  user_id String 
  total Int
  status String @default("PENDING")
  create_at DateTime @default(now())
  deliver_at DateTime?
  province String
  ward String 
  detail String
  note String? @db.TinyText

  user User @relation(fields: [user_id], references: [id])
  order_items OrderItem[]
  payment Payment?
  return_request ReturnOrderRequest[]
}