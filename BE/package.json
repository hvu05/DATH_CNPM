{
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^7.0.2",
    "eslint": "^9.37.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt-ts": "^7.1.0",
    "body-parser": "^2.2.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "zod": "^4.1.12"
  },
  "scripts": {

    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:reset": "npx prisma migrate reset --force --skip-seed",
    "prisma:remigrate": "npm run prisma:reset && npm run prisma:migrate  --name init",
    "db:seed": "npx prisma db seed",

    "build": "tsc",
    "start": "node dist/app.js",

    "dev": "npm run prisma:generate && nodemon --watch src --ext ts --exec \"ts-node src/app.ts\"",

    "lint": "eslint \"src/**/*.ts\""
  },
  "prisma": {
    "schema": "./prisma/models/",
    "seed": "ts-node --transpile-only src/utils/prisma/init.ts"
  }
}
